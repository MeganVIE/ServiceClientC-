<Window x:Class="Client_HW_8.EditDepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_HW_8"
        mc:Ignorable="d"
        Title="Edit Department" Height="137.233" Width="314.365" ResizeMode="NoResize">
    <Grid Background="Beige">
        <Label Content="Department's title:" 
               FontSize="15" 
               HorizontalAlignment="Left" 
               Margin="10,10,0,0" 
               VerticalAlignment="Top"/>
        <TextBox x:Name="tbDepTitle" 
                 HorizontalAlignment="Left" 
                 Height="25" 
                 Margin="160,15,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="120"/>
        <Button x:Name="btnSaveDep" 
                Content="Save" 
                HorizontalAlignment="Left" 
                Margin="109,61,0,0" 
                VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
